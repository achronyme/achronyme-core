// test-layout.soc
// Simple test for layout strategy

let app = () => do {
    // Main container: w-full h-full to fill window, then center children
    ui_box("bg-[#1a1a1a] w-full h-full p-6 flex-col items-center gap-4", () => do {

        ui_label("Layout Test", "text-white text-2xl font-bold")

        // With explicit width, items-center works correctly
        ui_box("bg-[#333333] p-4 rounded-lg flex-row gap-2 items-center", () => do {
            ui_label("Row 1:", "text-blue-400")
            ui_button("Button A", "bg-blue-600 text-white p-2 rounded")
            ui_button("Button B", "bg-green-600 text-white p-2 rounded")
        })

        // Another box with explicit width
        ui_box("bg-[#444444] p-4 rounded-lg flex-col gap-2", () => do {
            ui_label("Column Box", "text-purple-400")
            ui_label("Item 1", "text-gray-300")
            ui_label("Item 2", "text-gray-300")
        })

        ui_label("Footer", "text-gray-500")
    })
}

gui_run(app, { title: "Layout Test", width: 500, height: 400 })
