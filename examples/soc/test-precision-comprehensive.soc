// Comprehensive precision configuration test

print("=== Test 1: Default Full Precision ===")
print("Pi:", 3.141592653589793)
print("e:", 2.718281828459045)
print("1/3:", 1.0 / 3.0)
print("sqrt(2):", sqrt(2))
print("Very small:", 0.0000000001)

print("\n=== Test 2: Precision 2 Decimal Places ===")
set_precision(2)
print("Pi:", 3.141592653589793)
print("e:", 2.718281828459045)
print("1/3:", 1.0 / 3.0)
print("sqrt(2):", sqrt(2))
print("9.99:", 9.99)
print("10.01:", 10.01)
print("Very small:", 0.0000000001)

print("\n=== Test 3: Integer Precision (0 decimals) ===")
set_precision(0)
print("Pi:", 3.141592653589793)
print("e:", 2.718281828459045)
print("2.4:", 2.4)
print("2.5:", 2.5)
print("2.6:", 2.6)
print("3.7 + 2.8 =", 3.7 + 2.8)

print("\n=== Test 4: Complex Numbers - Default Precision ===")
set_precision(-1)
print("Pure imaginary (3i):", 0 + 3i)
print("Unit imaginary (i):", 0 + 1i)
print("Negative unit (-i):", 0 - 1i)
print("Pure real (5):", 5 + 0i)
print("Standard form (2+3i):", 2 + 3i)
print("Negative imaginary (2-3i):", 2 - 3i)
print("Both very small:", 0.0000000001 + 0.0000000001i)

print("\n=== Test 5: Complex Numbers - Precision 2 ===")
set_precision(2)
print("3.14159 + 2.71828i:", 3.14159 + 2.71828i)
print("1.666 + 2.333i:", 1.666 + 2.333i)
print("5.001 - 0.0001i:", 5.001 - 0.0001i)
print("0.0001 + 3.999i:", 0.0001 + 3.999i)
print("Tiny both:", 0.0000001 + 0.0000001i)

print("\n=== Test 6: Complex Numbers - Integer Precision ===")
set_precision(0)
print("2.7 + 3.9i:", 2.7 + 3.9i)
print("0.4 + 1.2i:", 0.4 + 1.2i)
print("5.5 + 0.001i:", 5.5 + 0.001i)

print("\n=== Test 7: Vectors with Precision ===")
set_precision(2)
print("Vector:", [1.111, 2.222, 3.333, 4.444, 5.555])
print("Fractions:", [1.0/3.0, 2.0/3.0, 1.0/7.0])
print("Small values:", [0.001, 0.0001, 0.00001])

print("\n=== Test 8: Nested Vectors ===")
print("Matrix:", [[1.111, 2.222], [3.333, 4.444], [5.555, 6.666]])

print("\n=== Test 9: Epsilon Threshold Test ===")
print("Testing epsilon = 1e-10:")
print("1.0 + 1e-11 =", 1.0 + 0.00000000001)
print("1e-11 =", 0.00000000001)
print("1e-9 =", 0.000000001)

print("\n=== Test 10: High Precision (4 decimals) ===")
set_precision(4)
print("Pi:", 3.141592653589793)
print("e:", 2.718281828459045)
print("Golden ratio:", 1.618033988749895)
print("sqrt(2):", sqrt(2))

print("\n=== Test 11: Rounding Behavior ===")
set_precision(2)
print("Round up (1.235):", 1.235)
print("Round down (1.234):", 1.234)
print("Round half-up (1.125):", 1.125)
print("Round half-up (1.135):", 1.135)

print("\n=== Test 12: Reset to Full Precision ===")
set_precision(-1)
print("Full precision restored:")
print("Pi:", 3.141592653589793)
print("1/3:", 1.0 / 3.0)
print("Complex:", 2.718281828459045 + 3.141592653589793i)

print("\n=== Test 13: Precision with Math Functions ===")
set_precision(2)
print("sin(pi/4):", sin(3.14159/4))
print("cos(pi/3):", cos(3.14159/3))
print("exp(1):", exp(1))
print("ln(e):", ln(2.71828))

print("\n=== All tests complete ===")
