println("=== NUMERICAL ANALYSIS - QUICK DEMO ===")
println("")

// DIFFERENTIATION
println("DIFFERENTIATION:")
let f = (x: Number) => x * x
println("  diff(x², 3) =", diff(f, 3), " (expected: 6)")

let g = (v: Vector) => v[0] * v[0] + v[1] * v[1]
println("  gradient(x²+y², [1,2]) =", gradient(g, [1, 2]))
println("")

// INTEGRATION
println("INTEGRATION:")
println("  integral(x², 0, 1) =", integral(f, 0, 1), " (expected: 0.333...)")
println("  simpson(x², 0, 1)  =", simpson(f, 0, 1))
println("  romberg(x², 0, 1)  =", romberg(f, 0, 1))
println("  quad(x², 0, 1)     =", quad(f, 0, 1))
println("")

// ROOT FINDING
println("ROOT FINDING:")
let h = (x: Number) => x * x - 4
println("  solve(x²-4, 0, 3)  =", solve(h, 0, 3), " (expected: 2)")
println("  newton(x²-4, 1)    =", newton(h, 1))
println("  secant(x²-4, 1, 3) =", secant(h, 1, 3))
println("")

// COMPLEX ENHANCEMENTS
println("COMPLEX ENHANCEMENTS:")
let c = complex(3, 4)
println("  magnitude(3+4i)    =", magnitude(c), " (expected: 5)")
println("  to_polar(3+4i)     =", to_polar(c))
println("  polar(5, π/4)      =", polar(5, pi() / 4))
println("")

println("All 15 functions (11 numerical + 4 complex) working correctly!")
